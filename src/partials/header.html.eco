<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title><%= @getTitle() %></title>
    <meta name="viewport" content="width=device-width">
    <meta name="google-site-verification" content="vE_TSC7WOaWmPWAQryKIW3zmibsq7sVDF6I1Tcfex7U">

    <!-- for Google -->
    <meta name="description" content="<%= @getDescription() %>">
    <meta name="author" content="The Community">
    <meta name="application-name" content="">

    <!-- for Facebook -->
    <meta property="og:title" content="<%= @getTitle() %>">
    <meta property="og:type" content="article">
    <meta property="og:image" content="<%= @site.url %>/img/logo.png">
    <meta property="og:url" content="<%= @site.url %>">
    <meta property="og:description" content="<%= @getDescription() %>">

    <!-- for Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= @getTitle() %>">
    <meta name="twitter:description" content="<%= @getDescription() %>">
    <meta name="twitter:image" content="<%= @site.url %>/img/logo.png">

    <!-- CSS -->
    <link rel="stylesheet" href="<%= @site.url %>/css/main.css">

    <% if @document.layout == "single": %>
        <link rel="stylesheet" href="<%= @site.url %>/css/syntax-highlight.css">
    <% end %>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="<%= @site.url %>/img/favicon.ico">

    <!--[if lt IE 10]>
    <link rel="stylesheet" media="all" href="<%= @site.url %>/css/ielt10.css">
    <![endif]-->

    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Raleway:400,600,700" rel="stylesheet" type="text/css">

    <% if @document.author: %>
        <!-- Author -->
        <link rel="author" href="<%= @getAuthorGooglePlus(@document.author) %>">
    <% end %>
</head>
<body>
